<h1>Welcome! Please Register</h1>

<%= form_for @user do |f| %>

  <%= f.label :email %>
  <%= f.email_field :email%>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %>

  <%= f.submit :Register %>

<% end %>

<%= flash[:notice] %>

<% @user.errors.full_messages.each do |error| %>
<%= error %>
<% end %>