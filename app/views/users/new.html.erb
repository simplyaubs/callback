<%= form_for @user, html: {class: "form-horizontal"} do |f| %>

  <div class="form-group">
    <h1 class="col-sm-offset-3 col-sm-10">Welcome! Please Register</h1>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "col-sm-5 control-label" %>
    <%= f.email_field :email %>
  </div>

  <div class="form-group">
    <%= f.label :password, class: "col-sm-5 control-label" %>
    <%= f.password_field :password %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation, class: "col-sm-5 control-label" %>
    <%= f.password_field :password_confirmation %>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-5 col-sm-10">
    <%= f.submit :Register, class: "btn btn-primary btn-lg" %>
      </div>
  </div>

<% end %>

<div class="row">
  <div class="col-sm-offset-5 col-sm-10">
    <p class="error"><%= flash[:notice] %></p>
    <% @user.errors.full_messages.each do |error| %>
      <p class="error"><%= error %></p>
    <% end %>
  </div>
</div>

